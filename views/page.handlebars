<div class="content">
<div class="container main">
    <br>
    {{!-- Add workout form --}}
    <div class="container add-workout">
        <h2 class="text-center">Add description of your workout</h2>
        <form class="create-form">
            <div class="form-group">
                <label for="workout">Workout name:</label>
                <textarea id="workout" style="text-align:center" placeholder="Keep Track of the workouts you've totally Crushed!"class="form-control" name="workout_name" rows="2" cols="15"></textarea>
            </div>
             <div class="form-row text-center">
                <div class="col-12">
                    <button class="btn btn-light add" type="submit">Add workout</button>
                </div>
            </div>
        </form>


        {{!--this form is for chart-------------------------------------------------}}
         <form class="create-form">
            <div class="form-group">
                <label for="workout">Workout duration:</label>
                <textarea id="duration" class="form-control" placeholder="Add the duration of your workout" name="workout_duration" rows="2" cols="15"></textarea>
            </div>
            <div class="form-row text-center">
                <div class="col-12">

                {{!--this button is for chart--}}
                <button class="btn btn-light add" type="submit">Add duration</button>
                   
                </div>
            </div>
        </form> {{!----------------------------------------------------------}}
    </div>
              
    {{!-- workout list area --}}
    <div id="workout-list">
        <div class="container workouts">
            <div class="row pb-4">
                <div class="col-md-6 col-sm-12">
                    <div class="col-12 workout-col m-1">

                        <h2 class="text-center workout-heading">Workouts to Crush</h2>

                        <ul class="workouts">
                            {{#each workouts}}
                            {{#unless crushed}}
                            {{> workouts/workout-block }}
                            {{/unless}}
                            {{/each}}
                        </ul>
                    </div>
                </div>

                <div class="col-md-6 col-sm-12">
                    <div class="col-12 workout-col m-1">

                        <h2 class="text-center workout-heading">Workouts Crushed</h2>

                        <ul class="workouts">
                            {{#each workouts}}
                            {{#if crushed}}
                            {{> workouts/workout-block }}
                            {{/if}}
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>




                        <h2 class="text-center workout-heading">Workouts Progress</h2>
                        {{!-- Added canvas to run the chart --}}
                        <div class="chart-container" >
                            <canvas id="myChart" style="color:aqua height:30vh;  width:50vw"></canvas>
                        </div>

                        <script>
                            var oldData = [12, 18, 3, 5, 2, 3];
                            var ctx = document.getElementById('myChart').getContext('2d');
                            var myChart = new Chart(ctx, {
                                type: 'bar',
                                data: {
                                    labels: ['Cardio', 'Weights', 'Chest & Back', 'Bench press'],
                                    datasets: [{
                                            label: 'Workouts',
                                            data: oldData,
                                            backgroundColor: 'rgba(150, 105, 120, 1)',
                                            borderColor: 'rgba(200, 108, 150, 1)',
                                            borderWidth: 1,
                                        }]
                                    },
                                options: {
                                scales: {
                                        y: {
                                            beginAtZero: true
                                        }
                                    },
                                }
                            
                            });
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
